mixin pagination(items)
	if items.totalPages > 1
		ul.pagination
			if items.previous
				li: a(href='?page=' + items.previous): i.material-icons keyboard_arrow_left
			else
				li.disabled: a(href='?page=' + 1): i.material-icons keyboard_arrow_right
			each p, i in items.pages
				li(class=items.currentPage === p ? 'active' : null)
					a(href='?page=' + (p === '...' ? (i ? items.totalPages : 1) : p ))= p
			if items.next
				li: a(href='?page=' + items.next): i.material-icons keyboard_arrow_right
			else
				li.disabled: a(href='?page=' + items.totalPages): i.material-icons keyboard_arrow_right
	
